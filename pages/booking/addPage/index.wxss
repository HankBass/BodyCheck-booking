/* pages/booking/addPage/index.wxss */
.tips{
  margin: 20rpx 0;
}
.item{
  display: flex;
  align-items: center;
  border-bottom:1px solid #eee ;
  justify-content: space-between;
}
.item-wrap{
  display: flex;
}
.name{
 display: flex;
  align-content: flex-start;
}

.combo .name .text{
  display: inline-block;
  margin-right: 10rpx;
  line-height: 40rpx;
  vertical-align: top;
}
.price{
  display: flex;
  align-content: flex-end;
}
.price .discount {
  font-size: 36rpx;
  color: red;
  font-weight: 700;

}
.line{
  display: inline-block;
  margin:0 10rpx;
}
.price .origin{
  line-height: 50rpx;
  color: #ccc;
  text-decoration: line-through;
  width: 100rpx;
}
.btns{
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}