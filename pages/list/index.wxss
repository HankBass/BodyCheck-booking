/* pages/list/index.wxss */

.list {
  min-height: 100vh;
}

.list .card {
  margin: 0 20rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: #fff;
  box-shadow: 0 8rpx 12rpx #ebedf0;
  margin-bottom: 20rpx;
}

.list .card .status {
  text-align: right;
}
.list .card .name {
  margin: 16rpx 0;
}
.card .price .num {
  color: #ee0a24;
}

.card .booking-info {
  background-color: #f8f8f8;
  border-radius: 8px;
  color: #58727e;
}
.card .booking-info .item{
  padding: 16rpx 30rpx 10rpx 30rpx;
  display: flex;
  font-size: 28rpx;
}